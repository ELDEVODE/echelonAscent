{
  "name": "echelon-ascent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "next dev",
    "dev:backend": "convex dev",
    "predev": "convex dev --until-success && convex dashboard",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "get-authority": "npx tsx scripts/get-authority-address.ts",
    "create-token": "npx tsx scripts/create-token.ts",
    "mint-tokens": "npx tsx scripts/mint-tokens.ts",
    "token-manager": "npx tsx scripts/token-manager.ts",
    "test-integration": "npx tsx scripts/test-token-integration.ts",
    "token:setup": "npm run get-authority && npm run create-token",
    "token:mint": "npm run mint-tokens",
    "token:balance": "npm run token-manager balance",
    "token:rewards": "npm run token-manager reward-leaderboard",
    "token:test": "npm run test-integration"
  },
  "dependencies": {
    "@civic/auth-web3": "^0.5.15",
    "@metaplex-foundation/digital-asset-standard-api": "^2.0.0",
    "@metaplex-foundation/js": "^0.20.1",
    "@metaplex-foundation/mpl-core": "^1.4.0",
    "@metaplex-foundation/mpl-token-metadata": "^3.4.0",
    "@metaplex-foundation/umi": "^1.2.0",
    "@metaplex-foundation/umi-bundle-defaults": "^1.2.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "bs58": "^6.0.0",
    "chart.js": "^4.4.9",
    "convex": "^1.23.0",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.513.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
